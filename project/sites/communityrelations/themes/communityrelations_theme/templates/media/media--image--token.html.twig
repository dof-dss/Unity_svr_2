{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 */
#}
{%
  set classes = [
  'media-image',
]
%}
<div{{ attributes.addClass(classes) }} data-picture-mapping="{{ content.field_media_image.0['#responsive_image_style_id'] }}">
  {% if content %}
    <figure>
      {{ content }}
    </figure>
  {% endif %}
</div>
